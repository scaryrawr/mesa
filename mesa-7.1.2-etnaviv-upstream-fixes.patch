-         /* XXX do we need to flush the CPU cache too or start a write barrier
-          * to make sure the GPU sees it? */
          ctx->dirty |= ETNA_DIRTY_TEXTURE_CACHES;
       }
    }
 
+   if (!trans->rsc)
+      etna_bo_cpu_fini(rsc->bo);
+
