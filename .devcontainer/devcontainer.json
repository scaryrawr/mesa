{
  "name": "mesa",
  "image": "fedora:latest",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode"
    }
  },
  "containerUser": "vscode",
  "remoteUser": "vscode",
  "onCreateCommand": "sudo dnf install -y dnf-plugins-core 'dnf-command(builddep)' rpmdevtools gh",
  "postStartCommand": "sudo dnf builddep -y mesa.spec"
}
