{
  "name": "fedora",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "username": "vscode",
      "upgradePackages": "true"
    }
  },
  "containerUser": "vscode",
  "remoteUser": "vscode",
  "postCreateCommand": "sudo dnf install -y dnf-plugins-core rpmdevtools",
  "postStartCommand": "sudo dnf builddep -y mesa.spec"
}
